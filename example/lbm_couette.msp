do_domain:
  - domain:
     bounds:    [ [0,0,0],[0.1,0.1,0.1] ]
     grid_dims: [ 100 , 100 , 100 ]
     periodic:  [ true, true, false ]

set_lbm_parameters:
  - lbm_parameters:
     Fext: [0,0,0]
     nuth: 1e-2

boundary_conditions:
  - neumann_z_l:
     U: [0.001,0,0]

global:
   global:
      simulation_paraview_freq: 100
      simulation_end_iteration: 3000
